<% ingredient_array = @ingredients.collect {|i| i.name}.sort %>

<div class="container-fluid">
<form action="<%= recipes_path %>" method="POST">
  <input id="submitted-list" type="hidden" name="ingredients_list" value=""/>
  <div class="span12">

  <!-- <textarea rows="3" cols="20" placeholder="Ingredients">
  </textarea> -->
  <h1>Edit:</h1>
  <h1><%= @recipe.name %><button type="submit" id="ingredient-submit" class="btn btn-success btn-large" style="margin:-10px 0 0 20px">Submit</button></h1>

  </div>
  <div class="container-fluid">
    <div class="span5">
      <h3>Ingredients:</h3>
      <h4 id="list"><% @recipe.ingredients.each_with_index do |i,index| %>
              <% comma_var = index < @recipe.ingredients.size ? "," : "" %>
              <%= i.name + comma_var %>
              <% end %></h4>
    </div>
    <div class="span5">
      <h3>Pantry: (Click to add)</h3>
      <div class="well">
        <% ingredient_array.each do |i| %>
          <p class="btn" style="margin-bottom:2px" id="ingredient-<%=i%>"><%=i%></p>
        <%end%>
      </div>
      <span class='btn pull-right' style="margin-top:-10px; font-weight: 460" id='reset_ingredients'>Reset</span>
    </div>
  </div>
</form>
</div>
    <%= render :partial => 'jscript', :formats=>[:js], :locals => {:ingredient_array => ingredient_array}%>
